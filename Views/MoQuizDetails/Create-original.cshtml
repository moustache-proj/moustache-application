@model MoustacheApp.Models.MoQuizDetail

@{
    ViewData["Title"] = "Create";
}

<h3>@ViewData["Title"]</h3>
<hr />
<div class="canister">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PreviousId" class="control-label col-md-1"></label>
                <div class="col-md-4">
                    <select asp-for="PreviousId" class="form-control" asp-items="ViewBag.PreviousId"></select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CommonId" class="control-label col-md-1"></label>
                <div class="col-md-4">
                    <input asp-for="CommonId" class="form-control" />
                    <span asp-validation-for="CommonId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label col-md-1"></label>
                <div class="col-md-4">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Information" class="control-label col-md-1"></label>
                <div class="col-md-7">
                    <textarea asp-for="Information" class="form-control"></textarea>
                    @*<input asp-for="Information" class="form-control" />*@
                    <span asp-validation-for="Information" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="QuizStart" class="control-label col-md-1"></label>
                <div class="col-md-4">
                    <input asp-for="QuizStart" class="form-control" />
                    <span asp-validation-for="QuizStart" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LockedUntil" class="control-label col-md-1"></label>
                <div class="col-md-4">
                    <input asp-for="LockedUntil" class="form-control" />
                    <span asp-validation-for="LockedUntil" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
