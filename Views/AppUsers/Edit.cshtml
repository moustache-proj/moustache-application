@model MoustacheApp.Models.AppUser

@{
    ViewData["Title"] = "Edit User";
}

<h3>@ViewData["Title"]</h3>
<hr />
<div class="canister">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label col-md-1"></label>
                <div class="col-md-4">
                    <input asp-for="Id" class="form-control" readonly="readonly" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Anonymous" class="control-label col-md-1"></label>
                <div class="col-md-1">
                    <input asp-for="Anonymous" class="form-control" />
                    <span asp-validation-for="Anonymous" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label col-md-1"></label>
                <div class="col-md-4">
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AltName" class="control-label col-md-1"></label>
                <div class="col-md-4">
                    <input asp-for="AltName" class="form-control" />
                    <span asp-validation-for="AltName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label col-md-1"></label>
                <div class="col-md-4">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                </label>
                <div class="col-md-4">
                    <input class="form-check-input" asp-for="EmailConfirmed" />
                    @Html.DisplayNameFor(model => model.EmailConfirmed)
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AccessFailedCount" class="control-label col-md-2"></label>
                <div class="col-md-1">
                    <input asp-for="AccessFailedCount" class="form-control" />
                    <span asp-validation-for="AccessFailedCount" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                </label>
                <div class="col-md-4">
                    <input class="form-check-input" asp-for="LockoutEnabled" />
                    @Html.DisplayNameFor(model => model.LockoutEnabled)
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LockoutEnd" class="control-label col-md-1"></label>
                <div class="col-md-4">
                    <input asp-for="LockoutEnd" class="form-control" />
                    <span asp-validation-for="LockoutEnd" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Disabled" class="control-label col-md-1"></label>
                <div class="col-md-1">
                    <input asp-for="Disabled" class="form-control" />
                    <span asp-validation-for="Disabled" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DisableDate" class="control-label col-md-1"></label>
                <div class="col-md-4">
                    <input asp-for="DisableDate" class="form-control" />
                    <span asp-validation-for="DisableDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DisabledBy" class="control-label col-md-1"></label>
                <div class="col-md-4">
                    <input asp-for="DisabledBy" class="form-control" readonly="readonly" />
                    <span asp-validation-for="DisabledBy" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

